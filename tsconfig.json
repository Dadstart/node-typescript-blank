{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"downlevelIteration": true,
		"jsx": "react",
		"lib": [
			"es6",
			"dom"
		],
		"target": "es5",
		"moduleResolution": "node",
		"alwaysStrict": false,
		"noImplicitAny": true,
		"outDir": "./lib",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"sourceRoot": "src",
		"strictNullChecks": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*-spec.ts",
		"lib"
	]
}
